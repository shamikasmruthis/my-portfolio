---
import Layout from '../layouts/layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
---

<Layout title="Shamika's Portfolio">
  <section class="hero">
    <h1>hi, i'm shamika.</h1>
    <p class="subtitle">UX Designer & HCI Researcher</p>
    <p class="description">
      designing ethical, accessible, and sustainable digital experiences that center both people and planet.
    </p>
    <div class="cta-buttons">
	  <button class="btn btn-primary" id="copy-email">copy email</button>
      <a href="/cv.pdf" class="btn btn-primary">view cv</a>
    </div>
  </section>
   <section class="projects" id="projects">
    <h2>projects</h2>
    <div class="projects-grid">
      <ProjectCard 
        title="Designing for financial collaboration"
        description="Research & design project documenting financial collaboration practices, guiding collaborative interface design."
        image="/project1.jpg"
		link="/p1-financial-collab"
      />
      <ProjectCard 
        title="Navigating adventure sports booking"
        description="Mapping content structure for water adventure sports to support experience discovery and booking."
        image="/project2.jpg"
		link="/p2-aquasplash-ia"
      />
      <ProjectCard 
        title="Accessibility audit for the Royal Ballet & Opera"
        description="Audited sections of the Royal Ballet & Opera website for accessibility using automated tools and manual techniques."
        image="/project3.jpg"
	  	link="/p3-accessibility-audit"
      />
    </div>
  </section>

</Layout>

<style>
  .hero {
  max-width: 800px;
  margin: 0 auto;
  padding: 6rem 3rem 4rem;
  text-align: center;
}

h1 {
  font-size: var(--step-3);
  color: #713F12;
  font-weight: 600;
  margin-bottom: 1rem;
}

.subtitle {
  font-size: var(--step-1);
  color: #713F12;
  margin-bottom: 1.5rem;
}

.description {
  font-size: var(--step-0);
  color: #713F12;
  line-height: 1.6;
  margin-bottom: 2rem;
}

.cta-buttons {
  display: flex;
  gap: 1rem;
  justify-content: center;
}

.btn {
  padding: 0.75rem 1.5rem;
  border-radius: 4px;
  text-decoration: none;
  font-size: var(--step--1);
  border: none;
  cursor: pointer;
  font-family: 'Figtree', sans-serif;
}

.btn-primary {
  background: #713F12;
  color: #FEFCE8;
}

.btn:hover {
  opacity: 0.9;
}

.projects {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem 3rem 4rem;
}

.projects h2 {
  font-size: var(--step-2);
  color: #713F12;
  font-weight: 600;
  text-align: center;
  margin-bottom: 3rem;
}

.projects-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
}

@media (max-width: 1024px) {
  .projects-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 768px) {
  .hero {
    padding: 4rem 1.5rem 6rem;
  }
  
  h1 {
    font-size: var(--step-2);
  }
  
  .cta-buttons {
    flex-direction: column;
  }

  .projects {
    padding: 3rem 1.5rem;
  }
  
  .projects-grid {
    grid-template-columns: 1fr;
  }
}
</style>

<script>
  document.getElementById('copy-email')?.addEventListener('click', async function() {
    await navigator.clipboard.writeText('shamikasmruthi@gmail.com');
    
    const originalText = this.innerHTML;
    this.innerHTML = 'copied âœ“';
    
    setTimeout(() => {
      this.innerHTML = originalText;
    }, 2000);
  });
</script>