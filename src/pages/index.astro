---
import Layout from '../layouts/layout.astro';
---

<Layout title="Shamika - UX Designer & HCI Researcher">
  <section class="hero">
    <h1>hi, i'm shamika.</h1>
    <p class="subtitle">UX Designer & HCI Researcher</p>
    <p class="description">
      designing ethical, accessible, and sustainable digital experiences that center both people and planet.
    </p>
    <div class="cta-buttons">
      <a href="/cv.pdf" class="btn btn-primary">view cv</a>
      <button class="btn btn-primary" id="copy-email">copy email</button>
    </div>
  </section>
</Layout>

<style>
  .hero {
    max-width: 800px;
    margin: 0 auto;
    padding: 6rem 3rem 8rem;
    text-align: center;
  }
  
  h1 {
    font-size: var(--step-3);
    color: #713F12;
    font-weight: 600;
    margin-bottom: 1rem;
  }
  
  .subtitle {
    font-size: var(--step-1);
    color: #713F12;
    margin-bottom: 1.5rem;
  }
  
  .description {
    font-size: var(--step-0);
    color: #713F12;
    line-height: 1.6;
    margin-bottom: 2rem;
  }
  
  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
	font-size: var(--step-0);
  }
  
  .btn {
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    text-decoration: none;
    font-size: 1rem;
    border: none;
    cursor: pointer;
    font-family: 'Figtree', sans-serif;
  }
  
  .btn-primary {
    background: #713F12;
    color: #FEFCE8;
  }
  
  
  .btn:hover {
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 4rem 1.5rem 6rem;
    }
    
    h1 {
      font-size: 2rem;
    }
    
    .cta-buttons {
      flex-direction: column;
    }
  }
</style>

<script>
  document.getElementById('copy-email')?.addEventListener('click', async function() {
    await navigator.clipboard.writeText('shamikasmruthi@gmail.com');
    
    const originalText = this.innerHTML;
    this.innerHTML = 'copied âœ“';
    
    setTimeout(() => {
      this.innerHTML = originalText;
    }, 2000);
  });
</script>