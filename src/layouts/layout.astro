---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Figtree:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <Header />
    
    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style is:global>

:root {
  --step--2: clamp(0.7813rem, 0.7726rem + 0.0354vw, 0.8rem);
  --step--1: clamp(0.9375rem, 0.9085rem + 0.1181vw, 1rem);
  --step-0: clamp(1.125rem, 1.067rem + 0.2361vw, 1.25rem);
  --step-1: clamp(1.35rem, 1.2514rem + 0.4014vw, 1.5625rem);
  --step-2: clamp(1.62rem, 1.4654rem + 0.6293vw, 1.9531rem);
  --step-3: clamp(1.944rem, 1.7132rem + 0.9396vw, 2.4414rem);
  --step-4: clamp(2.3328rem, 1.9992rem + 1.3581vw, 3.0518rem);
  --step-5: clamp(2.7994rem, 2.3283rem + 1.918vw, 3.8147rem);
}

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  body {
    font-family: 'Figtree', sans-serif;
    background: #FEFCE8;
    font-size: var(--step-0);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  
  main {
    flex: 1;
  }
</style>