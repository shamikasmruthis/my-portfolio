---
interface Props {
  tldr: string;
  timeline: string;
  role: string;
  team: string;
}

const { tldr, timeline, role, team } = Astro.props;
---

<div class="project-meta-section">
  <div class="tldr-block">
    <h2>TLDR</h2>
    <p>{tldr}</p>
  </div>
  
  <div class="meta-bar">
    <span><strong>Team:</strong> {team}</span>
    <span class="divider">|</span>
    <span><strong>Role:</strong> {role}</span>
    <span class="divider">|</span>
    <span><strong>Timeline:</strong> {timeline}</span>
  </div>
</div>

<style>
  .project-meta-section {
    margin-bottom: 3rem;
  }

  .tldr-block {
    margin-bottom: 1.5rem;
  }

  .tldr-block h2 {
    font-size: var(--step-1);
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #713F12;
  }

  .tldr-block p {
    font-size: var(--step--1);
    line-height: 1.6;
    margin: 0;
    color: #713F12;
  }

  .meta-bar {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    font-size: var(--step--1);
    color: #713F12;
  }

  .meta-bar strong {
    font-weight: 600;
  }

  .divider {
    color: #713F12;
  }

  @media (max-width: 768px) {
    .meta-bar {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .divider {
      display: none;
    }
  }
</style>