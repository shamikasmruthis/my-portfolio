---
interface Props {
  title: string;
  description: string;
  link: string;
}

const { title, description, link } = Astro.props;
---

<a href={link} class="project-card">
  <div class="project-content">
    <h3>{title}</h3>
    <p>{description}</p>
  </div>
</a>

<style>
    .project-card {
    background: #FEFCE8;
    border-radius: 5px;
    overflow: hidden;
    transition: transform 0.2s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
    color: inherit;
    }

    .project-card:hover {
      transform: translateY(-4px) rotate(1deg);
    }
  
